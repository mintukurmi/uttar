<body style="background-image: url('./img/undraw_Faq_re_31cw.svg'); background-size: contain; background-attachment: fixed; background-repeat: no-repeat; background-color: #F7F7F7;">



    
    <div class="container">
        <h2 class="mt-4 logo" style="font-size: 1.5em; font-weight: bold;">UTTAR</h2>
        <div class="row" style="height: 90vh;">
    
            <div class="col-md-5 d-table mx-auto my-auto">
    
            <div class="card" style="z-index: 1 ; opacity: 1">
    
                <!--Card content-->
                <div class="card-body px-lg-5 pt-0">
                    <h3 class="text-center mt-5 mb-4">Login</h3>
                    {{#if success_msg}}
                      <div class="text-success my-3 text-center" style="font-weight: 400; font-size: 1.2em;"> <span><i class="fa fa-smile-o mr-2"></i> </span> <span class="pb-"> {{success_msg}} </span> </div>
                    {{/if}}
                    {{#if error_msg}}
                      <div class="text-danger my-3 text-center" style="font-weight: 400; font-size: 1.2em;"> <span><i class="fa fa-frown-o mr-2"></i> </span> <span class="pb-"> {{error_msg}} </span> </div>
                    {{/if}}
                <!-- Form -->
                <form method="POST" action="">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Email address</label>
                      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Password</label>
                      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
                    </div>
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input" id="exampleCheck1" checked>
                      <label class="form-check-label" for="exampleCheck1">Keep signed in</label>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary mt-4">Submit</button>
                    </div>
                  </form>
                <!-- Form -->
                <div class="text-center mt-3 pt-2">
                    <a href="/signup"> Don't have an account? Signup now.</a>
                  </div>
                <div class="text-center mt-3 pt-2">
                   <a href="/"> <i class="fa fa-home mr-1 text-center"></i> Home </a>
                 </div>
                </div>
            
            </div>
            <!-- Material form login -->
    
            <!-- Default form login -->
                </div>
    
            </div>
    
        </div>

